{
  "name": "fetch-ssl-cert",
  "version": "1.0.1",
  "description": "A simple SSL certificate fetcher",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "test": "jest",
    "prepare": "husky install"
  },
  "author": "Ziv Eli",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^16.11.49",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}
